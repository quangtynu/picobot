# Copy this file to .env and fill in your values
# cp docker/.env.example docker/.env

# Required: OpenAI-compatible API key (works with OpenRouter, OpenAI, etc.)
OPENAI_API_KEY=sk-or-v1-YOUR_KEY_HERE

# Optional: OpenAI-compatible API base URL
OPENAI_API_BASE=https://openrouter.ai/api/v1

# Required: LLM model to use
PICOBOT_MODEL=google/gemini-2.5-flash

# Optional: Telegram bot token (from @BotFather)
TELEGRAM_BOT_TOKEN=

# Optional: Comma-separated Telegram user IDs allowed to use the bot
TELEGRAM_ALLOW_FROM=
